fn get_env(name)
  // Get environment variable value (empty string if not set)
  return env(name)
end

fn get_env_or(name, default)
  // Get environment variable with fallback default
  let val = env(name)
  if len(val) == 0.0
    return default
  end
  return val
end

fn get_home()
  // Get user home directory (cross-platform)
  let os = os_name()
  if os == "windows"
    return env("USERPROFILE")
  end
  return env("HOME")
end

fn get_cwd()
  // Get current working directory
  let os = os_name()
  if os == "windows"
    return env("CD")
  end
  return env("PWD")
end

fn get_path()
  // Get system PATH
  return env("PATH")
end

fn get_user()
  // Get current username
  let os = os_name()
  if os == "windows"
    return env("USERNAME")
  end
  return env("USER")
end

fn get_temp_dir()
  // Get temp directory path
  let os = os_name()
  if os == "windows"
    return env("TEMP")
  end
  return "/tmp"
end
