// theme.flow — GUI Theme Color Presets
//
// Provides 7 theme presets for the GUI toolkit. Each sets all 48 _tc values:
//   [0-2]=bg  [3-5]=panel  [6-8]=widget  [9-11]=hover  [12-14]=active
//   [15-17]=text  [18-20]=text_dim  [21-23]=border  [24-26]=accent  [27-29]=slider
//   [30-32]=surface2  [33-35]=focus_ring  [36-38]=success  [39-41]=warning
//   [42-44]=error  [45-47]=shadow
//
// Default theme: gui_theme_modern() (blue-violet tinted dark)
//
// Usage:
//   use "gui"
//   let _t = gui_theme_modern()   // default
//   let _t = gui_theme_ocean()    // switch to ocean

use "gui_core"

fn _theme_reset_settings()
  _ts[0] = 0.0
  _ts[1] = 0.0
  _ts[2] = 1.0
  _ts[3] = 0.8
  _ts[4] = 3.0
  _ts[5] = 3.0
  _ts[6] = 2.0
  _ts[7] = 16.0
  _ts[8] = 12.0
  _ts[9] = 20.0
  _ts[10] = 8.0
  _ts[11] = 12.0
  return 0.0
end

