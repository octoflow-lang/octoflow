// gui.flow — OctoFlow GUI Widget Toolkit (Facade)
//
// Backward-compatible facade that imports all GUI sub-modules.
// Existing code using `use "gui"` works unchanged.
//
// Sub-modules:
//   gui_core    — State arrays, constants, drawing primitives
//   theme       — Color theme presets (dark/light/ocean/midnight/forest/hicon)
//   widgets     — 16 widget types + queries
//   canvas      — Canvas drawing API
//   gpu_render  — Level 1 GPU rendering (gpu_fill/where/scatter builtins)
//   gpu_render_v2 — Level 2 shader rendering (custom SPIR-V + vm_present)
//   gui_state   — LoomDB state management (undo/redo/session)
//   window      — Init, event loop, render dispatch
//
// Usage:
//   use "gui"
//   let app = gui_init(800.0, 600.0, "My App")
//   let btn = gui_button(10.0, 10.0, 120.0, 36.0, "Click Me")
//   while gui_running() == 1.0
//     gui_update()
//     if gui_clicked(btn) == 1.0
//       print("Button clicked!")
//     end
//   end

use "gui_core"
use "theme"
use "widgets"
use "canvas"
use "gpu_render"
use "gpu_render_v2"
use "gui_state"
use "window"
