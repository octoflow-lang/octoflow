// emit_sieve_metrics.flow — Write Segment Count to Metrics (HOST_VISIBLE)
//
// Thread 0 only: reads segment count from B0 (Registers, uint), converts to
// float, writes to B1 (Metrics, HOST_VISIBLE float). CPU can poll B1 with
// zero-copy read (~1μs).
//
// Push constants:
//   pc[0] = count_off    (offset in B0 where segment count lives, as uint)
//   pc[1] = metrics_off  (offset in B1 where to write, as float)
//
// Binding layout (5-SSBO):
//   B0 (uint):  Read count from [count_off]
//   B1 (float): Write count to [metrics_off]
//
// Dispatch: wg = 1
//
// Run: octoflow run stdlib/loom/emit_sieve_metrics.flow --allow-read --allow-write

use "../compiler/ir"

fn emit_sieve_metrics(out_path)
  ir_new()
  ir_input_count = 3.0
  push(ir_uint_bindings, 0.0)

  let entry      = ir_block("entry")
  let body       = ir_block("body")
  let exit_block = ir_block("exit")

  // ── Entry: thread 0 guard ────────────────────────────────
  let gid     = ir_load_gid(entry)
  let pc_cnt  = ir_push_const(entry, 0.0)   // count_off
  let pc_met  = ir_push_const(entry, 1.0)   // metrics_off
  let one_u   = ir_const_u(entry, 1.0)
  let not_t0  = ir_ugte(entry, gid, one_u)
  let _sm     = ir_selection_merge(entry, exit_block)
  let _br     = ir_term_cond_branch(entry, not_t0, exit_block, body)

  // ── Body: B1[metrics_off] = utof(B0[count_off]) ─────────
  let cnt_u   = ir_ftou(body, pc_cnt)
  let met_u   = ir_ftou(body, pc_met)
  let cnt_val = ir_buf_load_u(body, 0.0, cnt_u)     // B0 (uint)
  let cnt_f   = ir_utof(body, cnt_val)
  let _store  = ir_buf_store_f(body, 1.0, met_u, cnt_f)  // B1 (float)
  let _br2    = ir_term_branch(body, exit_block)

  // ── Exit ──────────────────────────────────────────────────
  let _ret = ir_term_return(exit_block)

  ir_emit_spirv(out_path)
  return 0.0
end

let out = "stdlib/loom/kernels/sieve/sieve_metrics.spv"
let _r = emit_sieve_metrics(out)
print("Emitted: {out}")
