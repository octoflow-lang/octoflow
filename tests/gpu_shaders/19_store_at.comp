#version 450
// store_at — scatter src[0] → dst[offset]
// GPU GROUP BY primitive: stores one reduction result at a group index.
// 2 bindings, 1 push constant (offset as float, cast to uint).
layout(local_size_x = 256) in;
layout(set=0, binding=0) buffer Src { float data[]; } src;
layout(set=0, binding=1) buffer Dst { float data[]; } dst;
layout(push_constant) uniform PC { float offset; } pc;
void main() {
    if (gl_GlobalInvocationID.x == 0u) {
        dst.data[uint(pc.offset)] = src.data[0];
    }
}
